<header>
  <h1>TinyApp</h1>
    <% if (username) { %>
      <form method="POST" action="/logout">
        <h4>Hello, <%= username %>!
          <input type="submit" value="Logout">
        </h4>
      </form>
    <% } else { %>
      <form method="POST" action="/login">
        <input type="text" name="username">
        <input type="submit" value="Submit">
      </form>
    <% } %>
</header>